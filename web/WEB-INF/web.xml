<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controlador.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarRegistroUsuarioController</servlet-name>
        <servlet-class>Controlador.GuardarRegistroUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarRegistroClienteController</servlet-name>
        <servlet-class>Controlador.GuardarRegistroClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controlador.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarUsuarioController</servlet-name>
        <servlet-class>Controlador.EliminarUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarUsuarioController</servlet-name>
        <servlet-class>Controlador.ActualizarUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarClienteController</servlet-name>
        <servlet-class>Controlador.ActualizarClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarClienteHistoriaClinicaController</servlet-name>
        <servlet-class>Controlador.BuscarClienteHistoriaClinicaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarNuevaHistoriaClinicaController</servlet-name>
        <servlet-class>Controlador.GuardarNuevaHistoriaClinicaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarHistoriaClinicaController</servlet-name>
        <servlet-class>Controlador.ActualizarHistoriaClinicaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarClienteController</servlet-name>
        <servlet-class>Controlador.EliminarClienteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarRegistroUsuarioController</servlet-name>
        <url-pattern>/GuardarRegistroUsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarRegistroClienteController</servlet-name>
        <url-pattern>/GuardarRegistroClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarUsuarioController</servlet-name>
        <url-pattern>/EliminarUsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarUsuarioController</servlet-name>
        <url-pattern>/ActualizarUsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarClienteController</servlet-name>
        <url-pattern>/ActualizarClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarClienteHistoriaClinicaController</servlet-name>
        <url-pattern>/BuscarClienteHistoriaClinicaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarNuevaHistoriaClinicaController</servlet-name>
        <url-pattern>/GuardarNuevaHistoriaClinicaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarHistoriaClinicaController</servlet-name>
        <url-pattern>/ActualizarHistoriaClinicaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarClienteController</servlet-name>
        <url-pattern>/EliminarClienteController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
